{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build",
        "installCommand": "npm install"
      }
    },
    {
      "src": "api/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "^/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/assets/$1"
    },
    { "src": "^/api/(.*)", "dest": "/api/$1" },
    { 
      "src": "^/(.*)\\.(js|css|svg|png|jpg|jpeg|gif|ico|json|webmanifest)$",
      "dest": "/$1.$2"
    },
    { "handle": "filesystem" },
    { "src": "^/(.*)", "dest": "/index.html" }
  ]
}

